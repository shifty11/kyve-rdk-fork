{
  "name": "@kyvejs/tendermint",
  "version": "3.0.0",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:docker": "docker build -t kyve/tendermint .",
    "build:docker:binaries": "yarn build && rimraf out && pkg --target latest-linux-x64 package.json",
    "start": "node ./dist/src/index.js",
    "format": "prettier --write . --ignore-path ./.prettierignore"
  },
  "bin": "./dist/src/index.js",
  "pkg": {
    "scripts": "./dist/src/index.js",
    "targets": [
      "latest-linux-x64",
      "latest-linux-arm64",
      "latest-macos-x64"
    ],
    "outputPath": "out",
    "noBytecode": true,
    "publicPackages": [
      "*"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.2",
    "ajv": "^8.12.0",
    "axios": "^0.27.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "pkg": "^5.8.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  }
}
